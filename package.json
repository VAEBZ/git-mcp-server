{
  "name": "@cyanheads/git-mcp-server",
  "version": "2.0.1",
  "description": "An MCP (Model Context Protocol) server providing tools to interact with Git repositories. Enables LLMs and AI agents to perform Git operations like clone, commit, push, pull, branch, diff, log, status, and more via the MCP standard.",
  "type": "module",
  "license": "Apache-2.0",
  "author": "Casey Hand @cyanheads",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyanheads/git-mcp-server"
  },
  "homepage": "https://github.com/cyanheads/git-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/cyanheads/git-mcp-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "git-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "clean": "ts-node scripts/clean.ts",
    "tree": "ts-node scripts/tree.ts",
    "rebuild": "npm run clean && npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@apollo/server": "^4.10.5",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "ignore": "^7.0.4",
    "morgan": "^1.10.0",
    "openai": "^4.96.2",
    "partial-json": "^0.1.7",
    "sanitize-html": "^2.13.0",
    "simple-git": "^3.25.0",
    "ts-pattern": "^5.2.0",
    "uuid": "^10.0.0",
    "validator": "^13.12.0",
    "winston": "^3.13.1",
    "zod": "^3.23.8"
  },
  "keywords": [
    "typescript",
    "MCP",
    "model-context-protocol",
    "LLM",
    "AI-integration",
    "server",
    "git",
    "version-control",
    "repository",
    "commit",
    "branch",
    "diff",
    "log",
    "status",
    "push",
    "pull",
    "clone",
    "automation",
    "devops",
    "ai-agent",
    "llm-tools"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.3",
    "@types/sanitize-html": "^2.15.0",
    "@types/uuid": "^10.0.0",
    "@types/validator": "13.15.0",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "tiktoken": "^1.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
